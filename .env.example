# ==========================================
# WebMusic v2 Deployment Configuration
# ==========================================

# ------------------------------------------
# 1. DATABASE (PostgreSQL)
# ------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=webmusic
# If connecting to an external NAS Postgres from Mac, use IP (e.g., 192.168.2.18)
# POSTGRES_HOST=192.168.2.18

# ------------------------------------------
# 2. SECURITY (Required)
# ------------------------------------------
# Generate a secure random string for JWT signing
JWT_KEY=ChangeThisSecretKeyInProductionToSomethingSecureLongAndRandom

GEMINI_API_KEY_1=your_key_here
WHISPER_MODEL=tiny
